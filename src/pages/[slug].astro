---
import type { GetStaticPaths } from "astro";
import Base from "../layouts/Base.astro";
import SubMain from "../layouts/SubMain.astro";

import "../styles/md.scss";

export const getStaticPaths = (async () => {
  const allPages = await Astro.glob("../content/non-blogposts/*.md");

  return allPages.map((p) => {
    return {
      params: { slug: p.file.split("/").at(-1)!.replaceAll(".md", "") },
      props: { page: p },
    };
  });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
---

<Base
  title="About me | MISTCLICK's den"
  description="Here you can find a short personal statement of mine. Think of it what you like. :)"
>
  <SubMain>
    <div class="grow p-6 flex flex-col items-center">
      <article class="md:max-w-[55%]">
        <div post-content>
          <page.Content />
        </div>
      </article>
    </div>
  </SubMain>
</Base>
